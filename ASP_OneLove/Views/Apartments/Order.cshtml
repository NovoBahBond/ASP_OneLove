@model ASP_OneLove.Models.Apartment

@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h1>Order</h1>

<div>
    <h4>Apartment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.URLPath)*@
            Фото
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.URLPath" alt="https://cdn3.iconfinder.com/data/icons/web-development-and-programming-2/64/development_Not_Found-512.png" />
        </dd>
        <dt class = "col-sm-2">
           Тип
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
           Кол-во этажей
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floor)
        </dd>
        <dt class = "col-sm-2">
           Номер дома
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
           Кол-во комнат
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomCount)
        </dd>
        <dt class = "col-sm-2">
           Кол-во кроватей
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BedCount)
        </dd>
        <dt class = "col-sm-2">
          Кол-во ванных комнат
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BathCount)
        </dd>
        <dt class = "col-sm-2">
          Рейтинг
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stars)
        </dd>
        <dt class = "col-sm-2">
           Стоимость
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Куплен
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsBooked)
        </dd>
        <dt class = "col-sm-2">
            Дополнительные услуги
        </dt>
        <dd class="col-sm-10">
            @{
                var array = Model.SpecialFacilitiesAsString.Split(' ');
                Array.Sort(array);
                foreach (var i in array)
                {
                    <p>@Enum.GetName(typeof(Facility), int.Parse(i)); </p>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success text-white" asp-action="ProceedOrder" asp-route-id="@Model.ApartmentId">Confirm</a> |
    @if (Model.Type == ASP_OneLove.Models.ApartmentType.Flat || Model.Type == ASP_OneLove.Models.ApartmentType.House)
    {
        <a class="btn btn-secondary text-white" asp-action="House" asp-controller="Home">Назад к списку домов</a>
    }
    else
    {
<a class="btn btn-secondary text-white" asp-action="Apartments" asp-controller="Home">Назад к списку домов</a>

    }
</div>
